<UserControl x:Class="Abschlussprojekt.Seiten.Startseite"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Abschlussprojekt.Seiten"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button x:Name="Btn_Spiel_starten" Content="Spiel starten" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Btn_Spiel_starten_Click" Height="24"/>
        <Button x:Name="btn_Spiel_suchen" Content="Spiel suchen" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Width="75" Click="btn_Spiel_suchen_Click"/>
        <TextBox x:Name="Spielername" HorizontalAlignment="Left" Height="23" Margin="90,11,0,0" TextWrapping="Wrap" Text="Host_name" VerticalAlignment="Top" Width="120"/>

    </Grid>
</UserControl>
