        <TextBox x:Name="TB_Anmeldename" HorizontalAlignment="Left" Height="23" Margin="54,214,0,0" TextWrapping="Wrap" Text="Spieler1" VerticalAlignment="Top" Width="155" GotFocus="TB_Anmeldename_GotFocus" LostFocus="TB_Anmeldename_LostFocus"/>
